
@model Webnovel


<form method="post">
    <fieldset>
        <legend>Create Webnovel</legend>
        <br />
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name" class="form-label mt-4">Title</label>
            <input type="text" asp-for="Name"  class="form-control"  aria-describedby="titleHelp" placeholder="Enter title">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Genre" class="form-label mt-4">Genre</label>

            <select class="form-select" id="InputGenre" asp-for="Genre" >
                <option value="Fantasy">Fantasy</option>
                <option value="Sci-Fi">Sci-Fi</option>
                <option value="Horror">Horror</option>
                <option value="Thriller">Thriller</option>
                <option value="LitRpg">LitRpg</option>
                <option value="Romance">Romance</option>
            </select>
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PageCount" class="form-label mt-4">Pages</label>
            <input type="number" asp-for="PageCount" min="1" class="form-control" aria-describedby="titlePages" placeholder="Enter page count">
            <span asp-validation-for="PageCount" class="text-danger"></span>
        </div>
        <br />
        <input type="hidden"  value="@DateTime.Now" asp-for="CreatedDate " />
        <button asp-action="Create" asp-controller="Webnovel" type="submit" class="btn btn-primary">Submit</button>
        <button asp-action="Index" asp-controller="Webnovel" class="btn btn-outline-secondary" >Back to List</button>
    </fieldset>
</form>
@*Client side validation*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>

    }
}