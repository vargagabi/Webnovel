@model IEnumerable<Webnovel>
@{
    ViewData["Title"] = "Webnovel";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Webnovel List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Webnovel" class="btn btn-outline-primary">
                <i class="bi bi-plus-circle"></i>&nbsp;  Create New Webnovel
            </a>
        </div>
    </div>
    <br />
<table class="table  table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Pages</th>
            <th>Genre</th>
            <th>Date</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model){
            <tr class="table-primary">
                <td>@obj.Id</td>
                <td>@obj.Name</td>
                <td>@obj.PageCount</td>
                <td>@obj.Genre</td>
                <td>@obj.CreatedDate</td>
                <td>
                    <a class="btn btn-outline-secondary mx-2" asp-route-id="@obj.Id" asp-action="Edit" asp-controller="Webnovel"><i class="bi bi-pencil"></i> Edit</a>
                </td>
                <td>
                    <a class="btn btn-outline-warning mx-2" asp-route-id="@obj.Id" asp-action="Delete" asp-controller="Webnovel"><i class="bi bi-trash"></i> Delete</a>
                </td>
                            
            </tr>
        }
    </tbody>
</table>
</div>